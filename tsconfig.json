{
  "compilerOptions": {
    "target": "es2022", // Use a modern JS target
    "module": "NodeNext", // <-- CHANGE: Use Node's official ESM system
    "moduleResolution": "NodeNext", // <-- CHANGE: Use Node's official ESM resolution
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}